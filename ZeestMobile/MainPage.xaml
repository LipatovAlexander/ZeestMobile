<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ZeestMobile.ViewModels"
             xmlns:models="clr-namespace:ZeestMobile.Model"
             x:DataType="viewModels:TodoListsViewModel"
             x:Class="ZeestMobile.MainPage">
    
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        
        <HorizontalStackLayout Spacing="10">
            <Entry x:Name="todoList" Placeholder="Todo list name" TextChanged="TodoList_OnTextChanged" Text="{Binding NewListName}" />
            <Button Text="Add" Command="{Binding AddItemCommand}" />
        </HorizontalStackLayout>
        
        <ListView ItemsSource="{Binding TodoLists}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:TodoList">
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="16" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>

</ContentPage>
