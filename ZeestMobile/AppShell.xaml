<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZeestMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZeestMobile"
    xmlns:pages="clr-namespace:ZeestMobile.Pages"
    FlyoutBehavior="Disabled"
    Title="ZeestMobile">
    
    <Shell.Resources>
        <Style TargetType="Shell">
            <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
        </Style>
    </Shell.Resources>
    
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="ToDo Lists"
            ContentTemplate="{DataTemplate pages:ToDoListsPage}"
            Route="ToDoLists"/>
        <ShellContent
            Title="Onboarding"
            ContentTemplate="{DataTemplate pages:OnboardingPage}"
            Route="Onboarding"/>
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="Settings"/>
    </TabBar>
    
</Shell>
