<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:ZeestMobile.Pages"
             x:Class="ZeestMobile.Pages.OnboardingPage"
             x:DataType="pages:OnboardingPage">
    <ContentPage.Content>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label>
                Hello! Welcome to ToDo Application!
                
                Here you can create and use your own lists of tasks
                
                Short onboarding
                1. Go to ToDo Lists Page
                2. Create list
                3. Click and push to list
                4. Create item
                5. When you complete this item, mark it as done
            </Label>
            
            <HorizontalStackLayout>
                <CheckBox IsChecked="{Binding IsChecked}" CheckedChanged="CheckBox_OnCheckedChanged"/>
                <Label>Skip onboarding in future?</Label>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>