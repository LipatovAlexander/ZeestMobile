<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ZeestMobile.ViewModels"
             xmlns:models="clr-namespace:ZeestMobile.Model"
             x:Class="ZeestMobile.Pages.ToDoListPage"
             x:DataType="viewModels:TodoListViewModel"
             Shell.TabBarIsVisible="False"
             Title="{Binding Name}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior TextOverride="Back" IsVisible="True" />   
    </Shell.BackButtonBehavior>
    
    <ContentPage.Content>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10">
                <Entry Grid.Column="0"
                       Grid.Row="0"
                       Placeholder="Todo list name"
                       TextChanged="TodoItem_OnTextChanged"
                       Text="{Binding NewItemName}" />
                <Button Grid.Column="1"
                        Grid.Row="0"
                        Text="Add"
                        Command="{Binding AddItemCommand}" />
                <DatePicker Grid.Column="0"
                            Grid.Row="1"
                            Date="{Binding DeadlineDateOnly}"
                            DateSelected="DatePicker_OnDateSelected"
                            Format="D" />
                <TimePicker Grid.Column="0"
                            Grid.Row="2"
                            Time="{Binding DeadlineTimeOnly}"
                            PropertyChanged="BindableObject_OnPropertyChanged"
                            Format="t" />
            </Grid>
            
            <CollectionView ItemsSource="{Binding TodoItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:TodoItem">
                        <StackLayout>
                            <HorizontalStackLayout>
                                <CheckBox IsChecked="{Binding Done}" 
                                          CheckedChanged="CheckBox_OnCheckedChanged"
                                          Color="Brown"/>
                                <Label Text="{Binding Text}" FontSize="16" />
                                <Label Text="{Binding Deadline}"></Label>
                            </HorizontalStackLayout>

                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>